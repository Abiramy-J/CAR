@model Car_Rental_Management.Models.Car

<h2>Delete❓</h2>
<p>Are you sure you want to delete this car?</p>

<div>
    <strong>Model:</strong> @Model.CarModel.ModelName<br />
    <strong>Color:</strong> @Model.Color<br />
    <strong>Rate:</strong> @Model.DailyRate<br />
</div>

<form asp-action="DeleteCar" method="post">
    <input type="hidden" asp-for="CarID" />
    <button onclick="confirmDelete(@Model.CarID)">Delete</button>

    <a asp-action="CarList" class="btn btn-secondary">Cancel</a>
</form>

<script>
    function confirmDelete(id) {
        if (confirm("Are you sure you want to delete this car?")) {
            // Redirect to delete action
            window.location.href = '/Car/Delete/' + id;
        }
        // If canceled, do nothing
    }
</script>
