@model Car_Rental_Management.Models.Car

@{
    ViewData["Title"] = "Delete Car";
}

<h2> ❌ Delete Car</h2>
<p>Are you sure you want to delete this car?</p>

<div class="mb-3">
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="Car Image" style="width:200px; height:auto; margin-bottom:10px;" />
    }
    else
    {
        <p>No image available</p>
    }

    <strong>Model:</strong> @Model.CarModel?.ModelName<br />
    <strong>Color:</strong> @Model.Color<br />
    <strong>Rate:</strong> @Model.DailyRate<br />
</div>

<form asp-action="DeleteCarConfirmed" method="post"
      onsubmit="return confirm('Are you sure you want to delete this car?');">
    <input type="hidden" asp-for="CarID" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="CarList" class="btn btn-secondary">Cancel</a>
</form>
