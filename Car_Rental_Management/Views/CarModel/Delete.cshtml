@model CarModel

<h2>Delete Car Model</h2>

<dl class="row">
    <dt class="col-sm-2">Model Name</dt>
    <dd class="col-sm-10">@Model.ModelName</dd>

    <dt class="col-sm-2">Type</dt>
    <dd class="col-sm-10">@Model.Type</dd>
</dl>

<form asp-action="Delete" onsubmit="return confirmDelete();">
    <input type="hidden" name="CarModelID" value="@Model.CarModelID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("⚠️ Are you sure you want to delete this car model?");
        }
    </script>
}
