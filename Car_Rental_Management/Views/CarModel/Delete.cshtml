@model Car_Rental_Management.Models.CarModel

<h2 class="mb-4 text-danger">Delete Car Model</h2>

<div class="alert alert-warning">
    ⚠️ You are about to permanently delete this car model.
    <strong>This action cannot be undone!</strong>
</div>

<dl class="row">
    <dt class="col-sm-3">Brand</dt>
    <dd class="col-sm-9">@Model.Brand</dd>

    <dt class="col-sm-3">Model Name</dt>
    <dd class="col-sm-9">@Model.ModelName</dd>

    <dt class="col-sm-3">Year</dt>
    <dd class="col-sm-9">@Model.Year</dd>

    <dt class="col-sm-3">Body Type</dt>
    <dd class="col-sm-9">@Model.BodyType</dd>

    <dt class="col-sm-3">Fuel Type</dt>
    <dd class="col-sm-9">@Model.FuelType</dd>

    <dt class="col-sm-3">Transmission</dt>
    <dd class="col-sm-9">@Model.Transmission</dd>

    <dt class="col-sm-3">Seating Capacity</dt>
    <dd class="col-sm-9">@Model.SeatingCapacity</dd>

    <dt class="col-sm-3">Engine Capacity</dt>
    <dd class="col-sm-9">@Model.EngineCapacity</dd>

    @* <dt class="col-sm-3">Daily Rent Price</dt>
    <dd class="col-sm-9">@Model.DailyRentPrice.ToString("C")</dd>

    <dt class="col-sm-3">Deposit Amount</dt>
    <dd class="col-sm-9">@Model.DepositAmount.ToString("C")</dd> *@
</dl>

<form asp-action="Delete" method="post" onsubmit="return confirmDelete();">
    <input type="hidden" asp-for="CarModelID" />

    <div class="mt-3">
        <button type="submit" class="btn btn-danger">
            🗑️ Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            ↩ Cancel
        </a>
    </div>
</form>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("⚠️ Are you sure you want to delete this car model?\n\nOnce deleted, this record cannot be recovered.");
        }
    </script>
}
