@{
    ViewData["Title"] = "Login";
}

<!-- Full screen background with image -->
<div class="d-flex justify-content-center align-items-center vh-100"
     style="background: url('/images/car.png') no-repeat center center/cover;">

    <!-- Glass effect card -->
    <div class="card shadow-lg p-5 rounded-4"
         style="width: 380px; backdrop-filter: blur(12px); background: rgba(255, 255, 255, 0.85);">

        <h2 class="text-center mb-4 fw-bold text-primary">Login</h2>

        <form method="post" asp-action="Login">
            <div class="form-group mb-3">
                <label class="fw-semibold">Username</label>
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-person-fill text-primary"></i></span>
                    <input type="text" name="username" class="form-control" placeholder="Enter your username" required />
                </div>
            </div>

            <div class="form-group mb-4">
                <label class="fw-semibold">Password</label>
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-lock-fill text-primary"></i></span>
                    <input type="password" name="password" class="form-control" placeholder="Enter your password" required />
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold" style="border-radius: 10px;">
                Login
            </button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3 text-center">@ViewBag.Error</div>
        }

        <p class="text-center mt-4">
            <span class="text-muted">Don't have an account?</span><br />
            <a asp-controller="Home" asp-action="Register" class="fw-semibold text-decoration-none text-primary">
                Register here
            </a>
        </p>
    </div>
</div>

