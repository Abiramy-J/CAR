@model Brand
<div class="container">
	<div class="card">
		<div class="card-header text-center text-uppercase">Brand Details</div>
		<div class="card-body" >
			<div class="row">
				<div class="col-md-4">
					<p class="card-text text-uppercase"><strong>Id</strong></p>
				</div>
				<div class="col-md-8">
					<p class="card-text">: @Model.Id</p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<p class="card-text text-uppercase"><strong>Name</strong></p>
				</div>
				<div class="col-md-8">
					<p class="card-text">: @Model.Name</p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<p class="card-text text-uppercase"><strong>EstablishedYear</strong></p>
				</div>
				<div class="col-md-8">
					<p class="card-text">: @Model.EstablishYear</p>
				</div>
				@if (!string.IsNullOrEmpty(Model.brandLogo))
				{
					<div class="row mb-3">
						<div class="col-md-4">
							<p class="card-text text-uppercase"><strong>Brand Logo</strong></p>
						</div>
						<div class="col-md-8">
							<img src="@Model.brandLogo" width="100%" alt="Brand Logo" />
						</div>
					</div>
				}

				<div class="row">
					<div class="col-md-12 text-center">
						<a asp-controller="Brand" asp-action="Index" class="btn btn-danger">Back</a>
					</div>
				</div>
				
			</div>
		</div>
	</div>
