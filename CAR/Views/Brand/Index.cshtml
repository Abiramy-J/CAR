@model List<Brand>

<div class="container">
	<div class="row mb-4 ">
	<div class="col-md-6 text-uppercase"><h1>Brand List</h1></div>
	<div class="col-md-6 text-end">
		<a asp-controller="Brand" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"> Create</i>
</a>
	</div>
	</div>
	<hr />
	@if(Model.Count()>0)
	 {
	<table class="table table-bordered table-striped"> 
    <tr>
        <td>Name</td>
		<td>Established Year</td>
    </tr>
	<tbody>
			@foreach(var item in Model)
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.EstablishYear</td>
					<td class="d-flex align-items-center justify-content-center">
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Brand" asp-action="Details" asp-route-id="@item.Id" class=" btn btn-info" data-bs-toggle="tooltip" data-bs-placement="top" title="Details">
									<i class="bi bi-info-circle"></i>
							</a>
							<a asp-controller="Brand" asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-warning" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit">
									<i class="bi bi-pencil-square"></i>
							</a>
							<a asp-controller="Brand" asp-action="Delete" asp-route-id="@item.Id" class=" btn btn-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete">
									<i class="bi bi-trash"></i>
							</a>
						</div>

					</td>
				</tr>
			}
		</tbody>
		</table>
	}
	else
	{
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h2 class="text-center text-uppercase text-warning pt-4"> No Records to Show </h2>
				</div>
			</div>
		</div>
	}
</div>
