@model Brand
<div class="container">
	<div class=" row">
		<div class="col-md-12">
			<h2 class="text-uppercase text-center">Edit Brand</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-md-8 border-1 ">
			<form method="post" enctype="multipart/form-data">
				<div class="mb-3">
					<label asp-for="@Model.Name" class="form-label"></label>
					<input asp-for="@Model.Name" class="form-control" />
					<span asp-validation-for="@Model.Name" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="@Model.EstablishYear" class="form-label"></label>
					<input asp-for="@Model.EstablishYear" class="form-control" />
					<span asp-validation-for="@Model.EstablishYear" class="text-danger"></span>

				</div>
				<div class="mb-3">
					<label asp-for="@Model.brandLogo" class="form-label"></label>
					<input type="file" name="files" id="uploadBox" class="form-control" />
				</div>
				<div class="mb-3">
					<a asp-controller="Brand" asp-action="Index" class="btn btn-danger ">Back</a>
					<button type="submit" class="btn btn-warning">update</button>
				</div>
			</form>
		</div>
		<div class="col-md-4">
			@if(Model.brandLogo != null)
			{
				<img src="@Model.brandLogo" width="100%" alt="Brand Logo" />
			}
			else
			{
				<p class="text-center text-uppercase text-warning">No Logo Available</p>
			}
)
		</div>
	</div>
</div>
@section Scripts{
	<partial name="_validationScriptsPartial" />
}